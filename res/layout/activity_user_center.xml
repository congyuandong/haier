<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background">
    
    <RelativeLayout
	    android:layout_width="fill_parent" 
	    android:layout_height="@dimen/main_navigation_layout_height" 
    	android:background="@color/main_navigation_background">
        
	    <include layout="@layout/navigation_cover" />
	    
        <include layout="@layout/navigation_return" />
        
        <include layout="@layout/navigation_title" />
        
    </RelativeLayout>
     
    <ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:scrollbars="none"
		android:overScrollMode="never" 
		android:background="@drawable/main_background_repeat">
        
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:padding="@dimen/expert_filter_layout_padding">
	        
	        <TextView
				style="@style/user_center_title" 
				android:layout_width="wrap_content"
			    android:layout_height="@dimen/user_center_title_height"
				android:layout_marginLeft="@dimen/expert_filter_title_marginLeft"
				android:text="@string/user_center_base" />
	        
	        <RelativeLayout android:id="@+id/layoutUserCenterPassword"  
	            android:layout_width="fill_parent"
	        	android:layout_height="@dimen/expert_filter_layout_height"
	        	android:background="@drawable/expert_filter_button_background_header_selector"
	        	android:clickable="true">
	            
	            <ImageView 
					android:layout_alignParentRight="true"
			        android:layout_marginRight="@dimen/list_item_department_arraw_marginRight"
			        android:layout_height="fill_parent"
			        android:layout_width="@dimen/list_item_department_arraw_width"
			        android:scaleType="fitCenter"
			        android:adjustViewBounds="true"
			        android:contentDescription="@null"
			        android:src="@drawable/list_item_arrow"
			        android:layout_marginBottom="@dimen/list_divider_height"/>
	            
	            <TextView
					style="@style/list_item_department_title" 
					android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
					android:layout_marginLeft="@dimen/expert_filter_title_marginLeft"
					android:text="@string/user_center_password" />
	            
	        </RelativeLayout>
	        
	        
	        <TextView
				style="@style/user_center_title" 
				android:layout_width="wrap_content"
			    android:layout_height="@dimen/user_center_title_height"
				android:layout_marginTop="@dimen/expert_filter_layout_padding"
		    	android:layout_marginLeft="@dimen/expert_filter_title_marginLeft"
				android:text="@string/user_center_user" />
	        
	        <RelativeLayout android:id="@+id/layoutUserCenterMytv"  
	            android:layout_width="fill_parent"
	        	android:layout_height="@dimen/expert_filter_layout_height"
	        	android:background="@drawable/expert_filter_button_background_other_selector"
	        	android:clickable="true">
	            
	            <ImageView 
					android:layout_alignParentRight="true"
			        android:layout_marginRight="@dimen/list_item_department_arraw_marginRight"
			        android:layout_height="fill_parent"
			        android:layout_width="@dimen/list_item_department_arraw_width"
			        android:scaleType="fitCenter"
			        android:adjustViewBounds="true"
			        android:contentDescription="@null"
			        android:src="@drawable/list_item_arrow"
			        android:layout_marginBottom="@dimen/list_divider_height"/>
	            
	            <TextView
					style="@style/list_item_department_title" 
					android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
					android:layout_marginLeft="@dimen/expert_filter_title_marginLeft"
					android:text="@string/user_center_mytv" />
	            
	        </RelativeLayout>
	        <RelativeLayout android:id="@+id/layoutUserCenterTask"  
	            android:layout_width="fill_parent"
	        	android:layout_height="@dimen/expert_filter_layout_height"
	        	android:background="@drawable/expert_filter_button_background_header_selector"
	        	android:clickable="true">
	            
	            <ImageView 
					android:layout_alignParentRight="true"
			        android:layout_marginRight="@dimen/list_item_department_arraw_marginRight"
			        android:layout_height="fill_parent"
			        android:layout_width="@dimen/list_item_department_arraw_width"
			        android:scaleType="fitCenter"
			        android:adjustViewBounds="true"
			        android:contentDescription="@null"
			        android:src="@drawable/list_item_arrow"
			        android:layout_marginBottom="@dimen/list_divider_height"/>
	            
	            <TextView
					style="@style/list_item_department_title" 
					android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
					android:layout_marginLeft="@dimen/expert_filter_title_marginLeft"
					android:text="@string/user_center_task" />
	            
	        </RelativeLayout>
	        <RelativeLayout android:id="@+id/layoutUserCenterIntegral"  
	            android:layout_width="fill_parent"
	        	android:layout_height="@dimen/expert_filter_layout_height"
	        	android:background="@drawable/expert_filter_button_background_header_selector"
	        	android:clickable="true">
	            
	            <ImageView 
					android:layout_alignParentRight="true"
			        android:layout_marginRight="@dimen/list_item_department_arraw_marginRight"
			        android:layout_height="fill_parent"
			        android:layout_width="@dimen/list_item_department_arraw_width"
			        android:scaleType="fitCenter"
			        android:adjustViewBounds="true"
			        android:contentDescription="@null"
			        android:src="@drawable/list_item_arrow"
			        android:layout_marginBottom="@dimen/list_divider_height"/>
	            
	            <TextView
					style="@style/list_item_department_title" 
					android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
					android:layout_marginLeft="@dimen/expert_filter_title_marginLeft"
					android:text="@string/user_center_integral"/>
	            
	        </RelativeLayout>
	        <RelativeLayout android:id="@+id/layoutMoreFeedback" 
	            android:layout_width="fill_parent"
	        	android:layout_height="@dimen/expert_filter_layout_height"
	        	android:background="@drawable/expert_filter_button_background_other_selector"
	        	android:clickable="true">
	            
	            <ImageView 
					android:layout_alignParentRight="true"
			        android:layout_marginRight="@dimen/list_item_department_arraw_marginRight"
			        android:layout_height="fill_parent"
			        android:layout_width="@dimen/list_item_department_arraw_width"
			        android:scaleType="fitCenter"
			        android:adjustViewBounds="true"
			        android:contentDescription="@null"
			        android:src="@drawable/list_item_arrow"
			        android:layout_marginBottom="@dimen/list_divider_height"/>
	            
	            <TextView
					style="@style/list_item_department_title" 
					android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
					android:layout_marginLeft="@dimen/expert_filter_title_marginLeft"
					android:text="@string/more_feedback" />
	            
	        </RelativeLayout>
	        <RelativeLayout android:id="@+id/layoutMoreConsulting" 
	            android:layout_width="fill_parent"
	        	android:layout_height="@dimen/expert_filter_layout_height"
	        	android:background="@drawable/expert_filter_button_background_other_selector"
	        	android:clickable="true">
	            
	            <ImageView 
					android:layout_alignParentRight="true"
			        android:layout_marginRight="@dimen/list_item_department_arraw_marginRight"
			        android:layout_height="fill_parent"
			        android:layout_width="@dimen/list_item_department_arraw_width"
			        android:scaleType="fitCenter"
			        android:adjustViewBounds="true"
			        android:contentDescription="@null"
			        android:src="@drawable/list_item_arrow"
			        android:layout_marginBottom="@dimen/list_divider_height"/>
	            
	            <TextView
					style="@style/list_item_department_title" 
					android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
					android:layout_marginLeft="@dimen/expert_filter_title_marginLeft"
					android:text="@string/more_consulting" />
	            
	        </RelativeLayout>
	        
	        <Button android:id="@+id/buttonUserCenterLogout"
		        android:layout_width="fill_parent" 
		    	android:layout_height="@dimen/public_button_height"
            	android:layout_marginTop="@dimen/expert_filter_layout_padding"
		    	android:background="@drawable/public_button_dark_background_selector"
		    	style="@style/public_button_dark"
		    	android:text="@string/user_login_logout" />
	        
	    </LinearLayout>
    
	</ScrollView>
	    
</LinearLayout>